{
	"parameters": {
		"cvn": "/data/project/cvn",
		"cvn-bin": "{ cvn }/app",
		"cvn-log": "{ cvn }/log",
		"cvn-src": "{ cvn }/externals"
	},
	"cwd": "/tmp",
	"tasks": [
		{
			"cmd": "{cvn-bin}/cvnclerkbot.sh > {cvn-log}/cvnclerkbot.log 2>&1",
			"match": "python {cvn-src}/CVNClerkBot/cvnclerkbot.py",
			"pool": "cvn-app1"
		}
	],
	"templates": {
		"CVNBot": {
			"cwd": "{cvn-bin}/{name}",
			"cmd": "mono {cvn-bin}/{name}/CVNBot.exe > {cvn-log}/{name}.log 2>&1",
			"match": "mono {cvn-bin}/{name}/CVNBot.exe",
			"pool": "cvn-app1"
		}
	},
	"template-tasks": {
		"CVNBot": [
			{ "name": "CVNBot14" },
			{ "name": "KrinkleBot2" },
			{ "name": "KrinkleBot4" },
			{ "name": "KrinkleBot5" },
			{ "name": "KrinkleBot7" }
		]
	}
}
