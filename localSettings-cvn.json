{
	"parameters": {
		"cvn": "/srv/cvn"
	},
	"cwd": "/tmp",
	"user": "cvn.cvnservice",
	"tasks": [
		{
			"cmd": "{cvn}/services/CVNClerkBot/init.sh > {cvn}/log/cvnclerkbot.log 2>&1",
			"match": "python {cvn}/git/CVNClerkBot/cvnclerkbot.py",
			"pool": "cvn-app5",
			"user": false
		}
	],
	"templates": {
		"CVNBot": {
			"cwd": "{cvn}/services/cvnbot/{name}",
			"cmd": "mono {cvn}/services/cvnbot/{name}/CVNBot.exe > {cvn}/log/{name}.log 2>&1",
			"match": "mono {cvn}/services/cvnbot/{name}/CVNBot.exe"
		}
	},
	"template-tasks": {
		// https://meta.wikimedia.org/wiki/Countervandalism_Network/Bots
		"CVNBot": [
			// cvn-app4: swmt bots
			{ "name": "CVNBot6", "pool": "cvn-app4" }, // #cvn-sw (SWMT group 1)
			{ "name": "CVNBot7", "pool": "cvn-app4" }, // #cvn-sw (SWMT group 2)
			{ "name": "CVNBot8", "pool": "cvn-app4" }, // #cvn-sw (SWMT group 3)
			{ "name": "CVNBot9", "pool": "cvn-app4" }, // #cvn-sw (SWMT group 4)

			// cvn-app5: all others
			{ "name": "Cubbie", "pool": "cvn-app5" }, // #cvn-commons
			{ "name": "CVNBot1", "pool": "cvn-app5" }, // #cvn-wp-en
			{ "name": "CVNBot2", "pool": "cvn-app5" }, // #cvn-wp-ru
			{ "name": "CVNBot3", "pool": "cvn-app5" }, // #cvn-wp-es
			{ "name": "CVNBot4", "pool": "cvn-app5" }, // #cvn-it-scan (all it-lang wikis)
			{ "name": "CVNBot5", "pool": "cvn-app5" }, // #cvn-meta
			{ "name": "CVNBot10", "pool": "cvn-app4" }, // #cvn-sw (SWMT group 5)
			{ "name": "CVNBot12", "pool": "cvn-app5" }, // #cvn-wp-nl
			{ "name": "CVNBot13", "pool": "cvn-app5" }, // #cvn-wp-da
			{ "name": "CVNBot14", "pool": "cvn-app5" }, // #cvn-commons
			{ "name": "CVNBot16", "pool": "cvn-app5" }, // #cvn-ja (all ja-lang wikis)
			{ "name": "CVNBot17", "pool": "cvn-app5" }, // #cvn-wikivoyage (all Wikivoyage wikis)
			{ "name": "CVNBot18", "pool": "cvn-app5" }, // #cvn-wikidata
			{ "name": "CVNBot19", "pool": "cvn-app5" }, // #cvn-sw (SWMT group 6)
			{ "name": "CVNBot20", "pool": "cvn-app5" }, // #cvn-bn-scan (all bg-lang wikis)
			{ "name": "CVNBot21", "pool": "cvn-app5" }, // #cvn-mediawiki
			{ "name": "CVNBot22", "pool": "cvn-app5" }, // #cvn-mk-scan (some mk-lang wikis)
			{ "name": "SWBot3", "pool": "cvn-app5" } // #cvn-simplewikis
		]
	}
}
